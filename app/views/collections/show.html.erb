<p id="notice"><%= notice %></p>

<h1><%= @collection.name %></h1>
<%= render 'upload' %>
<%= link_to 'Upload Images', new_collection_image_path(@collection) %>

<div class="row">
  <div class="span12">
		<%  @collection.images.each do |image| %>
			<div class="grid">
				<div class="portfolio_image">
					<%= link_to(image_tag(image.image_file_url(:thumb).to_s), image.image_file_url(:medium).to_s) %>
				</div>
			</div>
		<% end %>
	</div>
</div>



